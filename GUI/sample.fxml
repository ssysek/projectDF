<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="file" mnemonicParsing="false" onAction="#onFileClick" text="Choose file" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem fx:id="groupby" mnemonicParsing="false" onAction="#onGroupbyClick" text="groupby" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="max" mnemonicParsing="false" onAction="#onMaxClick" prefHeight="60.0" prefWidth="66.0" text="max()">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="min" mnemonicParsing="false" onAction="#onMinClick" prefHeight="60.0" prefWidth="66.0" text="min()" />
            <Button fx:id="sum" mnemonicParsing="false" onAction="#onSumClick" prefHeight="60.0" prefWidth="66.0" text="sum()" />
            <Button fx:id="var" mnemonicParsing="false" onAction="#onVarClick" prefHeight="60.0" prefWidth="66.0" text="var()" />
            <Button fx:id="std" mnemonicParsing="false" onAction="#onStdClick" prefHeight="60.0" prefWidth="66.0" text="std()" />
            <Button fx:id="mean" mnemonicParsing="false" onAction="#onMeanClick" prefHeight="60.0" prefWidth="66.0" text="mean()" />
            <Button fx:id="med" mnemonicParsing="false" onAction="#onMedClick" prefHeight="60.0" prefWidth="66.0" text="med()" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Preview" />
            <ListView fx:id="listView" prefHeight="404.0" />
         </children>
      </VBox>
   </center>
   <bottom>
      <Button fx:id="chart" mnemonicParsing="false" onAction="#onChartClick" prefHeight="50.0" prefWidth="1600.0" text="Generate Chart" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
